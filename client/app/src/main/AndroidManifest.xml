<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ir.ac.guilan.graphsocialnetwork">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.GetIpActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".clientApi.serviseApi"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".views.FindFriendActivity"
            android:label="@string/title_activity_find_friend"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.followListActivity"
            android:label="@string/title_activity_follow_list"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>